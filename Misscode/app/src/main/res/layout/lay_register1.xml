<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/src_home_1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección de Email"
        android:layout_marginBottom="15dp"
        android:textSize="18dp"
        android:textColor="@color/Gray"
        android:id="@+id/text_hint"
        android:layout_above="@+id/email_v0"
        android:layout_alignLeft="@+id/email_v0"
        android:layout_alignStart="@+id/email_v0" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:id="@+id/email_v0"
        android:hint="Dirección de Email"
        android:layout_gravity="center"
        android:background="@drawable/back_edit"
        android:textColor="@color/black"
        android:textColorHint="@color/Gray"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:textAlignment="inherit"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/LightGrey"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:textColor="@color/Gray"
            android:id="@+id/text_siguiente"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/next"
            android:src="@drawable/flech_3"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al utilizar MisidCode, usted acepta los"
        android:id="@+id/textView"
        android:textSize="15dp"
        android:textColor="@color/Gray"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Términos de uso y Política de Privacidad"
        android:id="@+id/legal"
        android:textSize="15dp"
        android:layout_marginTop="-70dp"
        android:layout_below="@+id/textView"
        android:textColor="@color/orange"
        android:layout_centerHorizontal="true" />


</RelativeLayout>